<div> <%= link_to 'Voltar', promotions_path %> </div>

<%= form_with model: @promotion do |f| %>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>
    <%= f.label :code, 'Código' %>
    <%= f.text_field :code %>
    <%= f.label :discount_rate, 'Desconto' %>
    <%= f.number_field :discount_rate %>
    <%= f.label :coupon_quantity, 'Quantidade de cupons' %>
    <%= f.number_field :coupon_quantity, min: 0, step: 1 %>
    <%= f.label :expiration_date, 'Data de término' %>
    <%= f.date_field :expiration_date %>
    <%= f.submit 'Concluído' %>
  <% end %>
