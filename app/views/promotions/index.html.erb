<%= link_to 'Voltar', root_path %>
<%= link_to 'Registrar uma promoção', new_promotion_path %>

<% @promotions.each do |promotion| %>
    <h3> <%= link_to promotion.name, promotion %> </h3>
    <p> <%= promotion.description %> </p>
    <p> <%= number_to_percentage promotion.discount_rate, precision: 2, separator: ',' %> </p>
    <%= link_to 'Editar', edit_promotion_path(promotion) %>
    <%= link_to 'Deletar', promotion_path(promotion), method: :delete, data: {confirm: 'Deseja mesmo apagar item?'}%>
<% end %>

<% if @promotions.empty? %>
    <p>Nenhuma promoção cadastrada</p>
<% end %>